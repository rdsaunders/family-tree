---
title: "Photos"
layout: base
pagination:
  data: collections.mediaByTitle
  reverse: false
  size: 20
eleventyNavigation:
  key: Photos
---

<div class="container">
    <h1 class="page-title">{{ title }}</h1>

<ul class="grid--masonry">
    {% for item in pagination.items %}
        <li>
          <div class="card">
            <img class="card__img" src="{{ meta.cloudinary_url }}image/upload/w_480,f_auto/family_tree{{ item.data.images[0] }}" width="480" loading="lazy"/>
            <div class="card__content">
              <div class="card__heading"><a href="{{ item.url }}">
              {% if item.data.caption %}
                {{ item.data.caption }}
              {% else %}
                {{ item.data.title }}
              {% endif %}
              </a>
              </div>
              <p class="card__description">{{ item.data.description }}</p>
            </div>
          </div>
        </li>
    {% endfor %}
</ul>
<div class="u-align-center u-mt2 u-mb2">
{% include "pagination.njk" %}
</div>
</div>

